  "keywords": [
    "worker",
    "mongodb",
    "background"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "license": "MIT",
  "homepage": "https://github.com/valverdealbo/workers",
  "repository": {
    "type": "git",
    "url": "git@github.com:valverdealbo/workers.git"
  },
  "author": "Crist√≥bal Valverde Albo",
  "husky": {
    "hooks": {
      "pre-commit": "npm run test"
    }
  },
  "config": {
